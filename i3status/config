# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "wireless _first_"
order += "battery all"
order += "disk /"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "   %bitrate / %frequency: %ip "
        format_down = " W: down "
}

battery all {
        format = " %status %percentage %remaining "
	format_percentage = "%.01f%s"
	status_chr = "⚡ CHR"
	status_bat = " BAT"
	low_threshold = 15	
	threshold_type = time
	last_full_capacity = true
}

disk "/" {
        format = " 󱛟 %used / %total "
}

cpu_temperature 0 {
	format = "   %degrees ºC "
}

cpu_usage {
	format = " all: %usage CPU_0: %cpu0 CPU_1: %cpu1 "
}

memory {
        format = " 󰍛 %used / %available "
        threshold_degraded = "15%"
        format_degraded = " LOW MEMORY: %used / %available "
}

tztime local {
        format = " %a, %b %d - %l:%M %P "
}
